<?php

class User {
    public $name;
    protected $passport;
    protected $phone;
    public $age;

    public function __construct($name, $passport, $phone, $age) {
        $this->name = $name;
        $this->passport = $passport;
        $this->phone = $phone;
        $this->age = $age;
    }

    public function getPassport() {
        return $this->passport;
    }

    public function getPhone() {
        return $this->phone;
    }
}

class Student extends User {
    public $gpa;
    public $faculty;
    public $course;

    public function __construct($name, $passport, $phone, $age, $gpa, $faculty, $course) {
        parent::__construct($name, $passport, $phone, $age);
        $this->gpa = $gpa;
        $this->faculty = $faculty;
        $this->course = $course;
    }

    public function getStudentInfo() {
        return [
            "name" => $this->name,
            "passport" => $this->getPassport(),
            "phone" => $this->getPhone(),
            "age" => $this->age,
            "gpa" => $this->gpa,
            "faculty" => $this->faculty,
            "course" => $this->course,
        ];
    }
}


